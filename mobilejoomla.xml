<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/component-install.dtd">
<install type="component" version="1.5.0" method="upgrade">
	<name>Mobile Joomla!</name>
	<version>###VERSION###</version>
	<author>###AUTHOR###</author>
	<copyright>###COPYRIGHT###</copyright>
	<creationDate>###DATE###</creationDate>
	<authorEmail>###EMAIL###</authorEmail>
	<authorUrl>###URL###</authorUrl>
	<license>###LICENSE###</license>
	<description>Mobile Joomla! is the most advanced tool to turn your Joomla! site into a mobile web site compatible with all phones in the world, including iPhone, Smartphone, iMode and WAP phones</description>
	<files>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.tpl_mobile_iphone.ini</language>
	</languages>
	<administration>
		<menu>Kuneri Mobile Joomla!</menu>
		<submenu>
			<menu task="settings">Settings</menu>
			<menu task="extensions">Extensions</menu>
			<menu task="about">About</menu>
		</submenu>
		<languages>
			<language tag="en-GB">en-GB.com_mobilejoomla.ini</language>
			<language tag="en-GB">en-GB.com_mobilejoomla.menu.ini</language>
		</languages>
		<files>
			<filename>admin.mobilejoomla.html.php</filename>
			<filename>admin.mobilejoomla.php</filename>
			<filename>CHANGELOG.php</filename>
			<filename>defconfig.php</filename>
			<filename>imagerescaler.class.php</filename>
			<filename>index.html</filename>
			<filename>LICENSE.PHP</filename>
			<filename>mobilejoomla.class.php</filename>
			<filename>toolbar.mobilejoomla.html.php</filename>
			<filename>toolbar.mobilejoomla.php</filename>
			<filename>uninstall.mobilejoomla.php</filename>
			<folder>cachestorage</folder>
			<folder>extensions</folder>
			<folder>images</folder>
			<folder>markup</folder>
			<folder>modules</folder>
			<folder>plugins</folder>
			<folder>templates</folder>
		</files>
	</administration>
	<install/>
	<uninstall/>
	<installfile>uninstall.mobilejoomla.php</installfile>
	<uninstallfile>uninstall.mobilejoomla.php</uninstallfile>
</install>